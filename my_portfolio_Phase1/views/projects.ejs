<!-- views/projects.ejs -->
<% include('layout', { body: (function () { %>
  <section class="projects">
    <h2>Projects</h2>
    <% projects.forEach(project=> { %>
      <div class="project">
        <h3>
          <%= project.title %>
        </h3>
        <p>
          <%= project.description %>
        </p>
        <p>Technologies used: <%= project.technologies.join(', ') %></p>
        <a href="<%= project.link %>">View Project</a>
      </div>
    <% }) %>
  </section>
<% })() }) %>